<ul>
  <% @tasks.each do |task|  %>
    <li><%= link_to task.title, task_path(task) %>
      <ul>
        <li><%= "Description: #{task.details}" %></li>
        <li><%= "Status: #{task.completed}" %></li>
        <li><%= link_to "Edit", edit_task_path(task) %></li>
        <li> <%= link_to "Destroy", task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?"} %></li>
      </ul>
     </li>
  <% end %>
</ul>
